<!DOCTYPE html>
<html>
    <head>
    <meta charset="utf-8" />

    <title>Task_1</title>

    <script src="https://unpkg.com/react@16/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/babel-standalone@6.26.0/babel.js"></script>
    <style>
        table {
        border-collapse: collapse;
        }
        td, th {
        width: 100px;
        padding: 3px;
        border: 1px solid black;
        text-align: center;
        }
    </style>	
    </head>

    <body>
        <div id="root"></div>

        <script type="text/babel">
			var	list = [{name: 'pen',  	   cost: '10$', foto: 'url_1', quantity: '5'},
						{name: 'pencil',   cost: '2$', foto: 'url_2', quantity: '6'},
						{name: 'book',	   cost: '3$', foto: 'url_3', quantity: '7'},
						{name: 'notebook', cost: '4$', foto: 'url_4', quantity: '8'}];
			
			class ShoppingList extends React.Component {
				render(){
					var rows = [];
					var data = this.props.productList;
					
					data.forEach(function(elem, index, arr) 
					{
						rows.push(<tr key={index}>
									<td>{elem.name}</td>
									<td>{elem.cost}</td>
									<td>{elem.foto}</td>
									<td>{elem.quantity}</td>
							 </tr>);
					});
					return (
					<div className="shopping-list">
						<h1>Интернет магазин {this.props.name}</h1>
						<table className="table">
							<thead><th>Name</th><th>Cost</th><th>Foto</th><th>Quantity</th></thead>
							<tbody>{rows}</tbody>
						</table>
					</div>
					);
				}
			}
        
			ReactDOM.render(<ShoppingList name="Pavel" productList={list}/>, document.getElementById('root'));
        </script>

    </body>
</html>
